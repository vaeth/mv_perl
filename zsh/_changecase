#compdef changecase
_arguments -s -S : \
'(1 -)'{'--version','-V'}'[print version]' \
{'(--dir)-d+','(-d)--dir='}'[change content of DIR instead of .]:dir:_files -/' \
{'(--recurse)-r','(-r)--recurse'}'[recurse (default)]' \
{'(--norecurse)-R','(-R)--norecurse'}'[do not recurse]' \
{'(--quiet)-q','(-q)--quiet'}'[quiet]' \
'1:mode:(u l)'
